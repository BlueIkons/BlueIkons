{% extends 'BlueIconsFacebookInterfaceBundle::layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src ='https://www.paypalobjects.com/js/external/dg.js' type='text/javascript'></script>  
{% endblock %}
{% block content %}
	<div id="content">
		<form>
			<h2>Approve gift send (First send money then approve here)</h2>
                    
                        <table>
                            <tr>
                                <td style="margin: 0px; padding: 0px 10px 0px 10px;">
                                    Email
                                </td>
                                <td style="margin: 0px; padding: 0px 10px 0px 10px;">
                                    Amount
                                </td>
                                <td style="margin: 0px; padding: 0px 10px 0px 10px;">
                                    Action
                                </td>
                            </tr>
                            {% for outcoming in outcomings %}
                            <tr style="height: 30px;">
                                <td style="margin: 0px; padding: 0px 10px 0px 10px;">
                                    {{ outcoming.getReceiverEmail() }}
                                </td>
                                <td style="margin: 0px; padding: 0px 10px 0px 10px;">
                                    {{ outcoming.getIncomingPay().getItem().getAmount() }}
                                </td>
                                <td style="margin: 0px; padding: 0px 10px 0px 10px;">
                                    <a id="admin-goto-paypal" class="" href="{{ path('BlueIconsFI_gift_admin', { 'sended': outcoming.getId()}) }}"><span>Sent</span></a>
                                </td>
                            </tr>
                            {% endfor %}
                            
                        </table>
		</form>
	</div>
{% endblock %}
